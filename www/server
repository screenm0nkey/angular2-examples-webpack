#!/usr/bin/env node
var fs = require('fs');
var path = require('path');
var express = require('express');
var bodyParser = require('body-parser');
var app = express();
var cors = require('express-cors');

// bodyParser needed to parse POST form data
app.use(bodyParser.urlencoded({extended: true}));

app.use(cors({
  headers: ['X-Requested-With', 'Content-Type', 'Custom-FormNick'],
  allowedOrigins: ['127.0.0.1:*', 'localhost:*']
}));

app.get('/', function (req, res) {
  res.send('This is a dev server used for the Angular 2 examples');
});

app.get('/data', function (req, res) {
  var json = path.join(__dirname, '../src/json/characters.json');
  var readable = fs.createReadStream(json);
  readable.pipe(res);
});


var APPLETOP100 = path.join(__dirname, '../src/json/top100itunes.json');
app.get('/uk/rss/topsongs/limit=100/json', function (req, res) {
  fs.readFile(APPLETOP100, function (err, data) {
    if (err) {
      console.error(err);
      process.exit(1);
    }
    var results = parseInt(req.query.results, 10);
    if (isNaN(results)) {
      results = 100;
    }
    data = JSON.parse(data);
    data.feed.entry = data.feed.entry.slice(0, results);
    res.json(data);
  });
});


app.post('/data', function (req, res) {
  res.send(req.body)
});

var server = app.listen(1970, function () {
  console.log('Server running at http://localhost:' + server.address().port)
});
